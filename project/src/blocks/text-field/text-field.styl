.text-field
	max-width: 320px;
	&__label
		$fontH3()
		display: block
	&__input
		margin-top: 5px
		width: 100%
		border-radius: 4px
		border: 1px solid $dark25
		padding: 11px 15px 10px 
		display: block
		$fontBODY()
		&::placeholder
			color: $dark25
		&:hover, &:focus, &:active
			border-color: $dark50
			outline: none !important
